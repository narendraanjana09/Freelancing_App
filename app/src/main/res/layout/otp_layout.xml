<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:text="Verification Code"
        android:textSize="24sp"
        android:fontFamily="@font/handlee"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:text="Please type the verification code sent to"
        android:textSize="18sp"
        android:fontFamily="@font/handlee"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/otp_view"
        android:layout_below="@id/text2"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/handlee"
        />

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text3"
        app:bar_enabled="true"
        app:bar_height="2dp"
        app:bar_active_color="@color/teal_200"
        app:bar_inactive_color="@color/white1"
        app:length="6"
        app:otp_text_size="24dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/otp_view"
        android:layout_centerHorizontal="true"
        >
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/verifyCodeBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/changeNumberBTN"
        app:icon="@drawable/verify"
        android:text="Verify"
        android:textAllCaps="false"
        android:fontFamily="@font/handlee"
        android:textStyle="bold"
        android:textSize="18sp"

        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/changeNumberBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:icon="@drawable/ic_baseline_undo_24"
        android:layout_marginRight="10dp"
        android:text="Change Number"
        android:textAllCaps="false"
        android:fontFamily="@font/handlee"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    </RelativeLayout>
    </RelativeLayout>