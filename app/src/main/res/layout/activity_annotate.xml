<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black2"
    android:layout_height="match_parent"
    tools:context=".maineditor.MainAnnotateActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarlayout"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/teal_200"
            android:layout_height="wrap_content">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/back"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_width="wrap_content"
                app:fabSize="mini"
                android:onClick="back"
                android:layout_centerVertical="true"
                android:elevation="0dp"
                app:elevation="0dp"
                app:borderWidth="0dp"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/back"
                android:layout_toStartOf="@id/countTV"
                android:background="@color/teal_200"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:titleTextColor="@color/black"
                />
            <TextView
                android:id="@+id/countTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/handlee"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <com.nsa.flexjobs.testeditor.ZoomLayout
        android:id="@+id/zoomLayout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_above="@id/bottomLayout"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/text1">
        <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/topTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/editImageView"
                android:layout_above="@id/editImageView"
                />
            <ImageView
                android:id="@+id/editImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/bottomTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/editImageView"
                android:layout_below="@id/editImageView"
                />
        </RelativeLayout>



    </com.nsa.flexjobs.testeditor.ZoomLayout>
    <LinearLayout
        android:id="@+id/text1"
        android:orientation="vertical"
        android:layout_below="@id/appBarlayout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/HWTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"

            />
        <TextView
            android:id="@+id/XYTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"

            />
    </LinearLayout>

        <RelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/addLabelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Label"
                    android:elevation="0dp"
                    android:onClick="addLabel"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_baseline_add_24"
                    android:textAllCaps="false"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp" />
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/undo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="undo"
                    android:onClick="undo"
                    android:layout_marginStart="30dp"
                    android:layout_alignParentStart="true"
                    android:elevation="0dp"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_baseline_undo_24"
                    android:textAllCaps="false"/>
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cancel"
                    android:onClick="close"
                    android:layout_below="@id/undo"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:elevation="0dp"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_baseline_close_24"
                    android:textAllCaps="false"/>
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="confirm"
                    android:onClick="confirm"
                    android:layout_below="@id/addLabelButton"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="5dp"
                    android:elevation="0dp"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_baseline_done_24"
                    android:textAllCaps="false"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/doneLayout"
                android:visibility="gone"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="cancel"
                    android:layout_alignParentStart="true"
                    android:elevation="0dp"
                    app:elevation="0dp"
                    app:borderWidth="0dp"
                    android:src="@drawable/ic_baseline_close_24"
                    android:textAllCaps="false"/>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="saveFile"
                    android:elevation="0dp"
                    android:src="@drawable/ic_baseline_done_24"
                    android:layout_alignParentEnd="true"
                    app:elevation="0dp"
                    app:borderWidth="0dp"
                    android:textAllCaps="false"/>
            </RelativeLayout>
        </RelativeLayout>
    <ImageView
        android:id="@+id/prevImageView"
        android:layout_width="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:isScrollContainer="true"
        android:layout_above="@id/editBTN"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/editBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_edit_24"
        android:text="Edit"
        android:onClick="edit"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="30dp"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/uploadBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_cloud_upload_24"
        android:text="Upload"
        android:onClick="upload"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        />
    <ProgressBar
        android:id="@+id/progress_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:min="0"
        android:progressTint="@color/teal_200"
        android:layout_alignParentBottom="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="50"/>

</RelativeLayout>